<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialogsharp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/popuplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_weight="12"
                    android:layout_gravity="center"
                    android:textSize="25sp"
                    android:textColor="#525252"
                    android:text="发布匹配"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/closedialog_img"
                    android:src="@mipmap/chaohao2"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="类型"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/MateMode_txt"
                        android:textColor="#ccc"
                        android:textSize="18sp"
                        android:text="请选择匹配类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/Mode1_txt"
                        android:visibility="gone"
                        android:textColor="#ccc"
                        android:textSize="19sp"
                        android:text="即时"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/Mode2_txt"
                        android:visibility="gone"
                        android:textColor="#ccc"
                        android:layout_marginLeft="30dp"
                        android:textSize="19sp"
                        android:text="普通"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="项目"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/Item_Llayout"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:visibility="visible"
                        android:id="@+id/Item_txt"
                        android:textColor="#cccccc"
                        android:layout_weight="1"
                        android:textSize="18sp"
                        android:text="请选择匹配项目"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/Itemicon_img"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon1"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/Itemicon_txt"
                        android:textColor="#4a4a4a"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:text="图书馆"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>





            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="时间"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:visibility="visible"
                        android:id="@+id/TimePicker_txt"
                        android:textColor="#ccc"
                        android:textSize="18sp"
                        android:text="请选择赴约时间"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textColor="#474747"
                    android:text="性别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="#ccc"
                    android:id="@+id/sex_txt"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="请选择优先性别"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/sex_Llayout"
                    android:visibility="gone"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="#ccc"
                        android:id="@+id/all_txt"
                        android:layout_marginLeft="53dp"
                        android:textSize="19sp"
                        android:text="不限"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#ccc"
                        android:id="@+id/boy_txt"
                        android:layout_marginLeft="30dp"
                        android:textSize="19sp"
                        android:text="男"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#ccc"
                        android:id="@+id/girl_txt"
                        android:layout_marginLeft="30dp"
                        android:textSize="19sp"
                        android:text="女"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:enabled="true"
                android:id="@+id/MateDialog_btn"
                android:textColor="#000"
                android:background="@drawable/tuiyuanbtn_selector"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="确定"
                android:layout_width="250dp"
                android:layout_height="40dp" />


            <com.baidu.mapapi.map.TextureMapView
                android:id="@+id/mymap"
                android:clickable="true"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="180dp">

            </com.baidu.mapapi.map.TextureMapView>



        </LinearLayout>


    </RelativeLayout>







</RelativeLayout>